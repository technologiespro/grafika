{
  "name": "grafika",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "main": "electron/main.mjs",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && npx electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "dependencies": {
    "fabric": "^6.7.1",
    "vue": "^3.5.18"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/tsconfig": "^0.7.0",
    "concurrently": "^9.2.1",
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.3",
    "vite": "^5.3.1",
    "vue-tsc": "^3.0.5",
    "wait-on": "^9.0.1"
  },
  "build": {
    "appId": "com.grafika.app",
    "productName": "Grafika",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "electron/main.mjs"
    ],
    "win": {
      "target": "nsis"
    }
  }
}